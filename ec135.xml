	<weight x="2.99" y="-.43" z="-.45" mass-prop="/sim/weight[4]/weight-lb"/>
	<!-- left passenger -->
	<weight x="2.06" y="0" z="-1.13" mass-prop="/sim/weight[5]/weight-lb"/>
