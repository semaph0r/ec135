<!-- left skid -->
<gear x="3.863" y="+0.9" z="-1.9" skid="1" compression="0.10" spring="0.4" sfric="0.8" dfric="0.7"/>

<gear x="1.117" y="+0.9" z="-1.9" skid="1" compression="0.10" spring="0.4" sfric="0.8" dfric="0.7"/>

<!-- right skid -->
