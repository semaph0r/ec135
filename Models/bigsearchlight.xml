<?xml version="1.0"?>
<!-- Searchlight-->
<PropertyList>

 <path>bigsearchlight.ac</path>
 
<animation>
<type>rotate</type>
<object-name>searchlight</object-name>
<object-name>cone</object-name>

<offset-deg>22.5</offset-deg>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
		<center>
			<x-m>0.0</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>
		</center>
</animation>

 <model>
		<name>lightbeam</name>
		<path>Aircraft/ec135/Models/beam.xml</path>
		<offsets>
			<x-m>-0.0</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>

			<pitch-deg>-112.5</pitch-deg>

		</offsets>
	</model>
	
<animation>
		<type>translate</type>
		<name>lightcircle</name>
		<object-name>Circle</object-name>
		<property>position/gear-agl-m</property>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>-1</z>
		</axis>
	</animation>
	
<animation>
		<type>translate</type>
		<name>lightcircle</name>
		<object-name>Circle</object-name>
		<property>position/gear-agl-m</property>
		<factor>1.5</factor>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
