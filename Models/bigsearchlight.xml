<animation>
		<type>rotate</type>
		<name>fu_pitch</name>
		<object-name>Circle</object-name>
		<property>orientation/pitch-deg</property>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<name>fu_roll</name>
		<object-name>Circle</object-name>
		<property>orientation/roll-deg</property>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	


</PropertyList>